---
const {tag} = Astro.props;
---
<p class="born rounded-xl p-2 m-0! hover:*:text-white! bg-slate-200 relative hover:bg-slate-800 transition">
  <a id="tag-text" class="transition" href={`/tags/${tag}`}>{tag}</a>
</p>

<style>
  a::after {
    content: none;
  }
  :global(.dark) p {
    background-color: var(--color-slate-800);
  }
  p>a {
    color: var(--color-slate-600);
  }
  :global(.dark) p>a {
    color: var(--color-slate-200);
  }
  :global(.dark) p:hover {
    background-color: var(--color-slate-400);
  }
  :global(.dark) p:hover #tag-text {
    color: var(--color-slate-800);
  }
</style>