---
import HomeBackground from "../components/HomeBackground.astro";
import BaseLayout from "./BaseLayout.astro";
import StackExhibition from '../components/StackExhibition.astro'

---

<BaseLayout pageTitle="About">
  <HomeBackground />
  <StackExhibition />
  <div id="main-container" class="fade-in transition m-auto w-1/2 backdrop-blur-xl hover:backdrop-blur ring-2 rounded p-5 bg-white hover:bg-white/80">
    <slot />
  </div>
</BaseLayout>

<style>
  :global(.dark) #main-container {
    background-color: var(--color-slate-700);
  }
</style>