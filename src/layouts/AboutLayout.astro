---
import HomeBackground from "../components/HomeBackground.astro";
import BaseLayout from "./BaseLayout.astro";
import StackExhibition from "../components/StackExhibition.astro";
import BasicCard from "../components/BasicCard.astro";
---

<BaseLayout pageTitle="About">
  <HomeBackground />
  <StackExhibition />
  <div class="flex justify-center items-center">
    <BasicCard
      id="main-container"
      class="fade-in transition w-1/2 ring-2 max-sm:w-full max-lg:w-2/3 max-md:w-3/4"
    >
      <slot />
    </BasicCard>
  </div>
</BaseLayout>

<style>
  #main-container {
    padding: 40px;
    margin-bottom: 30px;
  }
  @media screen and (width < 48rem) {
    #main-container {
      padding: 20px;
      margin: 0;
    }
  }
</style>